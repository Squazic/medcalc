<%- model_class = FraminghamProfile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:male) %></th>
      <th><%= model_class.human_attribute_name(:age) %></th>
      <th><%= model_class.human_attribute_name(:sbp) %></th>
      <th><%= model_class.human_attribute_name(:treatment) %></th>
      <th><%= model_class.human_attribute_name(:smoker) %></th>
      <th><%= model_class.human_attribute_name(:diabetes) %></th>
      <th><%= model_class.human_attribute_name(:bmi) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @framingham_profiles.each do |framingham_profile| %>
      <tr>
        <td><%= link_to framingham_profile.id, framingham_profile_path(framingham_profile) %></td>
        <td><%= framingham_profile.male %></td>
        <td><%= framingham_profile.age %></td>
        <td><%= framingham_profile.sbp %></td>
        <td><%= framingham_profile.treatment %></td>
        <td><%= framingham_profile.smoker %></td>
        <td><%= framingham_profile.diabetes %></td>
        <td><%= framingham_profile.bmi %></td>
        <td><%=l framingham_profile.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_framingham_profile_path(framingham_profile), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      framingham_profile_path(framingham_profile),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_framingham_profile_path,
            :class => 'btn btn-primary' %>
