<%- model_class = FraminghamProfile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:male) %>:</strong></dt>
  <dd><%= @framingham_profile.male %></dd>
  <dt><strong><%= model_class.human_attribute_name(:age) %>:</strong></dt>
  <dd><%= @framingham_profile.age %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sbp) %>:</strong></dt>
  <dd><%= @framingham_profile.sbp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:treatment) %>:</strong></dt>
  <dd><%= @framingham_profile.treatment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:smoker) %>:</strong></dt>
  <dd><%= @framingham_profile.smoker %></dd>
  <dt><strong><%= model_class.human_attribute_name(:diabetes) %>:</strong></dt>
  <dd><%= @framingham_profile.diabetes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bmi) %>:</strong></dt>
  <dd><%= @framingham_profile.bmi %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              framingham_profiles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_framingham_profile_path(@framingham_profile), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              framingham_profile_path(@framingham_profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
